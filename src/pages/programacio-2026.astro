---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Programació 2026',
  description:
    "Programació de les Falles 2026 de la Falla Passeig de Tavernes de la Valldigna. Calendari d'actes i activitats.",
};
---

<Layout metadata={metadata}>
  <HeroText tagline="Falles 2026" title="Programació de la Falla" />

  <section class="max-w-4xl mx-auto px-4 py-8">
    <div class="flex flex-col gap-8">
      <div class="rounded-lg overflow-hidden shadow-lg border border-gray-200 dark:border-gray-800">
        <Image src="~/assets/images/programacio-2026-1.png" alt="Programació 2026 - Part 1" class="w-full h-auto" />
      </div>
      <div class="rounded-lg overflow-hidden shadow-lg border border-gray-200 dark:border-gray-800">
        <Image src="~/assets/images/programacio-2026-2.png" alt="Programació 2026 - Part 2" class="w-full h-auto" />
      </div>
    </div>
  </section>
</Layout>
